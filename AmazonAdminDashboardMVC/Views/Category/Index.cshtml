@model List<CategoryDTO>
<div>
	<a class="btn btn-primary m-3" asp-controller="Category" asp-action="Create">Create Category</a>
</div>
<div class="row no-gutters align-items-center mx-2">

	@foreach (var category in Model)
	{
		<div class="col-4 col-sm-6 col-md-4 d-flex align-items-center flex-column">
			<div class="card bg-light d-flex flex-fill m-2">
				<div class="card-header text-muted border-bottom-0">
					Digital Strategist
				</div>
				<div class="card-body pt-0">
					<div class="row">
						<div class="col-7">
							<h2 class="lead"><b></b></h2>
							<p class="text-muted text-sm"><b>ID: @category.Id </b> </p>
							<p class="text-muted text-sm"><b>Name: @category.Name </b> </p>
							<p class="text-muted text-sm"><b>Name: @category.arabicName</b> </p>
						</div>
						<div class="col-5 text-center">
							<img src="/Admin/img/user1.jpg" alt="user-avatar" class="img-circle img-fluid">
						</div>
					</div>
				</div>
				<div class="card-footer">
					<div class="text-center">
						<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@category.Id">
							SubCategories
						</a>
						<a class="btn btn-sm bg-teal" asp-action="EditCategory" asp-route-id="@category.Id">
							Edit
						</a>
						<a class="btn btn-sm bg-danger" asp-action="DeleteCategory" asp-route-id="@category.Id">
							Delete
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>
